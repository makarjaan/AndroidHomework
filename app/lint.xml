<?xml version="1.0" encoding="utf-8"?>

<lint>
    <!-- 1. Безопасность -->
    <issue id="ExposedCredentials" severity="error"/>
    <issue id="UnprotectedBroadcast" severity="error"/>
    <issue id="AllowBackup" severity="warning"/>
    <issue id="GoogleAppIndexingWarning" severity="ignore"/> <!-- Если не используете -->

    <!-- 2. Производительность -->
    <issue id="HandlerLeak" severity="error"/>
    <issue id="ObsoleteLayoutParam" severity="warning"/>
    <issue id="Overdraw" severity="warning"/>
    <issue id="UnusedResources" severity="warning"/>
    <issue id="ViewHolder" severity="error"/>
    <issue id="DrawAllocation" severity="warning"/> <!-- Аллокации в onDraw() -->

    <!-- 3. Локализация -->
    <issue id="HardcodedText" severity="error"/>
    <issue id="MissingTranslation" severity="warning"/>
    <issue id="TypographyQuotes" severity="warning"/> <!-- Неправильные кавычки -->

    <!-- 4. Совместимость -->
    <issue id="NewApi" severity="error"/>
    <issue id="InlinedApi" severity="warning"/>
    <issue id="Override" severity="warning"/> <!-- Неправильное переопределение -->

    <!-- 5. UX/Доступность -->
    <issue id="TouchTargetSize" severity="warning"/>
    <issue id="ContentDescription" severity="warning"/> <!-- Отсутствие описания для ImageView -->
    <issue id="KeyboardInaccessibleWidget" severity="warning"/>

    <!-- 6. Чистота кода -->
    <issue id="CommitTransaction" severity="warning"/>
    <issue id="LambdaLast" severity="warning"/>
    <issue id="MissingSuperCall" severity="error"/>
    <issue id="StringFormatInvalid" severity="error"/>

    <!-- 7. Ресурсы -->
    <issue id="DuplicateIds" severity="error"/>
    <issue id="IconDensities" severity="warning"/>
    <issue id="IconLocation" severity="warning"/>
    <issue id="IconColors" severity="warning"/> <!-- Векторные иконки с hardcoded цветами -->

    <!-- 8. Архитектура -->
    <issue id="ViewModelInitialization" severity="warning"/>
    <issue id="FragmentBackPress" severity="warning"/> <!-- Неправильная обработка back press -->
    <issue id="LifecycleObserverLeak" severity="warning"/>

    <!-- Игнорируемые проверки (по желанию) -->
    <issue id="RtlHardcoded" severity="ignore"/> <!-- Для LTR-приложений -->
    <issue id="Autofill" severity="ignore"/> <!-- Если не используете автозаполнение -->
    <issue id="Typos" severity="ignore"/> <!-- Орфографические ошибки в строках -->
</lint>