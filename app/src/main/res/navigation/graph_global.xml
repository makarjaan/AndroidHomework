<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_global.xml"
    app:startDestination="@id/destination_main_page">

    <action
        android:id="@+id/action_global_main_page"
        app:destination="@+id/destination_main_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"
        />

    <fragment
        android:id="@+id/destination_main_page"
        android:name="ru.itis.androidhomework.search.SearchFragment"
        android:label="destination_main_page" />



    <action
        android:id="@+id/action_global_feature_details_page"
        app:destination="@+id/destination_feature_details_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"
        />

    <fragment
        android:id="@+id/destination_feature_details_page"
        android:name="ru.itis.androidhomework.detail.FeatureDetailsFragment"
        android:label="destination_feature_details_page" />




    <action
        android:id="@+id/action_global_feature_login_page"
        app:destination="@+id/destination_feature_login_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"
        />

    <fragment
        android:id="@+id/destination_feature_login_page"
        android:name="ru.itis.androidhomework.auth.AuthFragment"
        android:label="destination_feature_login_page" />




    <action
        android:id="@+id/action_global_feature_registration_page"
        app:destination="@+id/destination_feature_registration_page"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out"
        app:popEnterAnim="@android:anim/fade_in"
        app:popExitAnim="@android:anim/fade_out"
        />

    <fragment
        android:id="@+id/destination_feature_registration_page"
        android:name="ru.itis.androidhomework.auth.RegistrationFragment"
        android:label="destination_feature_registration_page" />

</navigation>